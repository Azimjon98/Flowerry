<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.RecomendedClickFragment">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

           <com.denzcoskun.imageslider.ImageSlider
               android:id="@+id/image_slider"
               android:layout_width="match_parent"
               android:layout_height="380dp"
               app:iss_corner_radius="20"
               app:iss_auto_cycle="true"
               app:iss_delay="0"
               app:iss_period="5000"
               android:src="@drawable/flower_1"/>
         <androidx.cardview.widget.CardView
             android:layout_width="34dp"
             android:layout_height="34dp"
             app:cardCornerRadius="60dp"
             app:cardElevation="5dp"
             tools:ignore="MissingConstraints"
             android:layout_marginTop="-370dp"
             android:layout_marginLeft="345dp">
         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/ic_favorite"
             android:layout_gravity="center"

             />
         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:layout_width="34dp"
             android:layout_height="34dp"
             app:cardCornerRadius="60dp"
             app:cardElevation="5dp"
             android:layout_marginTop="-33dp"
             android:layout_marginLeft="10dp"
             tools:ignore="MissingConstraints"
             >

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/ic_baseline"
             android:layout_gravity="center"
             />
         </androidx.cardview.widget.CardView>
         <androidx.cardview.widget.CardView
             android:layout_width="34dp"
             android:layout_height="34dp"
             app:cardCornerRadius="60dp"
             app:cardElevation="5dp"
             tools:ignore="MissingConstraints"
             android:layout_marginTop="-33dp"
             android:layout_marginLeft="290dp">
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_sharee"
                 android:layout_gravity="center"

                 />
         </androidx.cardview.widget.CardView>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="My Little Chikkade"
             android:layout_marginTop="350dp"
             android:layout_marginLeft="20dp"
             android:textSize="22dp"
             android:textColor="#082567"
             />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="The stock confirmed today"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="20dp"
             android:textSize="14dp"
             android:textColor="#30D5C8"
             android:textStyle="bold"
             />
         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#F2F3F4"
             android:layout_margin="8dp"/>

         <LinearLayout
             android:id="@+id/expandable_more"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#F3F3F4">


                  <TextView
                      android:id="@+id/expandable_text"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/expandableText"
                      android:textColor="#000000"
                      android:maxLines="3"
                      android:ellipsize="end"
                      android:textSize="15dp"
                      android:layout_marginTop="10dp"/>
             <Button
                 android:id="@+id/btnmore"
                 android:layout_width="35dp"
                 android:layout_gravity="right"
                 android:background="@drawable/ic_more_1"
                 android:layout_height="35dp"
                 android:layout_marginEnd="12dp"/>
         </LinearLayout>

         <Button
             android:id="@+id/btn_add_cart"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="add to cart"/>




     </LinearLayout>


</androidx.core.widget.NestedScrollView>

