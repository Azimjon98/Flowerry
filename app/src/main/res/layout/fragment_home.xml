<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/reccc"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<LinearLayout

    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".ui.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:text="Tashkent, Toshkent, chilonzor ko'chasi, 4"
            android:textColor="#FA050303"
            android:textSize="11sp"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/shop_name"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="bottom"
            android:src="@drawable/more_show2"
            android:layout_marginTop="14dp"
            android:layout_marginStart="8dp" />

        <ImageView
            android:id="@+id/icon_share"
            android:layout_width="25dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="55dp"
            app:srcCompat="@drawable/icon_shareeee"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/icon_basket"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="22dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/icon_korzinaaaaa" />
    </LinearLayout>

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/action_Search"
        android:layout_width="match_parent"
        android:backgroundTint="#F3F3F3"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/search_bg"
        android:drawableLeft="@drawable/icon_search1"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Search Roses"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_name"
        tools:ignore="NotSibling" />

</RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/discountedRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/discounted_row_items" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

              <com.google.android.material.card.MaterialCardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardCornerRadius="15dp"
                  app:cardElevation="2dp"
                  android:layout_marginStart="10dp"
                  app:cardBackgroundColor="#FDDADA"
                  >

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Birthday Flowers "
                    android:textSize="20dp"
                    android:textColor="#000080"
                    android:padding="15dp"/>
dp                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/flower_reklama_1"
                    android:layout_marginStart="30dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Fresh flower bouquets ready for delivery within an hour"
                    android:textSize="12dp"
                    android:textColor="#008080"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="90dp"
                    android:layout_marginTop="-10dp"
                    />
            </LinearLayout>
              </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="1dp"
                android:layout_marginStart="10dp"
                app:cardBackgroundColor="#D7E0FD"
                >
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Birthday Flowers "
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:padding="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Fresh flower bouquets ready for delivery within an hour"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_marginStart="15dp"
                    />
            </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="Birthday Gifts"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
                  <androidx.cardview.widget.CardView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="185dp"
                      app:cardCornerRadius="10dp"
                      app:cardElevation="2dp"
                      app:cardBackgroundColor="#FFF"
                      >
            <Button
                android:id="@+id/btnSEEALL"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="#FD006B"
                android:text="SEE ALL"
                android:layout_gravity="center_vertical"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:textStyle="bold"
                tools:ignore="InvalidId" />
                  </androidx.cardview.widget.CardView>

        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommended_recycler"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="4dp"
        tools:listitem="@layout/recommended_recycler_item"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/itemTitle1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="Birthday Gifts"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="185dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFF"
            >
            <Button
                android:id="@+id/btnSEEALL1"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="#FD006B"
                android:text="SEE ALL"
                android:layout_gravity="center_vertical"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:textStyle="bold"
                tools:ignore="InvalidId" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newsRecycler"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/news_recycler_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/itemTitle_third"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="Birthday Gifts"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="185dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFF"
            >
            <Button
                android:id="@+id/btnSeeAll_third"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="#FD006B"
                android:text="SEE ALL"
                android:layout_gravity="center_vertical"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:textStyle="bold"
                tools:ignore="InvalidId" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/thirdRecycler"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/third_recycler_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp">

        <TextView
            android:id="@+id/itemTitle_fourth"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:text="Birthday Gifts"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="185dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFF"
            >
            <Button
                android:id="@+id/btnSeeAll_fourth"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="#FD006B"
                android:text="SEE ALL"
                android:layout_gravity="center_vertical"
                android:textColor="#FFF"
                android:textSize="10dp"
                android:textStyle="bold"
                tools:ignore="InvalidId" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fourthRecycler"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/fourth_recycler_item" />




</LinearLayout>
</androidx.core.widget.NestedScrollView>