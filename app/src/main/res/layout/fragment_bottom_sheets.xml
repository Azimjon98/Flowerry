<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.BottomSheets">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery Adres"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        />

    <RadioButton
        android:id="@+id/radiobutton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:button="@null"
        android:drawableRight="@android:drawable/btn_radio"
        android:text="Tashkent, Toshkent, chilonzor ko'chasi, 4"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_gravity="fill_vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New addres"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_maps_uz"
        android:layout_marginTop="10dp"
        android:layout_marginStart="262dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery time"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20dp"
        />
    <RadioButton
        android:id="@+id/radiobutton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:button="@null"
        android:drawableRight="@android:drawable/btn_radio"
        android:text="As soon as possible"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_gravity="fill_vertical"
        />
    <RadioButton
        android:id="@+id/radiobutton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        android:button="@null"
        android:drawableRight="@android:drawable/btn_radio"
        android:text="To time"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_gravity="fill_vertical"
        />
    <RadioButton
        android:id="@+id/radiobutton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        android:button="@null"
        android:drawableRight="@android:drawable/btn_radio"
        android:text="We will ask recipient today"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_gravity="fill_vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="20dp">
    <Button
        android:layout_width="360dp"
        android:backgroundTint="#000000"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textStyle="bold"
        android:gravity="center_horizontal"

        />
        </LinearLayout>









</LinearLayout>