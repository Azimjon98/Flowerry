<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.RecomendedClickFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/image_slider_news"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            app:iss_corner_radius="20"
            app:iss_auto_cycle="true"
            app:iss_delay="0"
            app:iss_period="5000"
            android:src="@drawable/flower_1"/>
        <androidx.cardview.widget.CardView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="5dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="-370dp"
            android:layout_marginLeft="345dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite"
                android:layout_gravity="center"

                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="5dp"
            android:layout_marginTop="-33dp"
            android:layout_marginLeft="10dp"
            tools:ignore="MissingConstraints"
            >

            <ImageView
                android:id="@+id/recomended_go_back_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="5dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="-33dp"
            android:layout_marginLeft="290dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sharee"
                android:layout_gravity="center"

                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Little Chikkade"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="20dp"
            android:textSize="22dp"
            android:textColor="#082567"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The stock confirmed today"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="14dp"
                android:textColor="#30D5C8"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150000 $"
                android:layout_marginStart="80dp"
                android:textColor="#FD006B"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F3F4"
            android:layout_margin="8dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:id="@+id/expandable_more_news"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                android:background="#F0F0F0">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Composition"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/expandable_text_news"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/expandableText"
                        android:textColor="#000000"
                        android:maxLines="3"
                        android:layout_marginStart="30dp"
                        android:layout_marginEnd="20dp"
                        android:ellipsize="end"
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"/>
                    <Button
                        android:id="@+id/btnmore_news"
                        android:layout_width="35dp"
                        android:layout_gravity="right"
                        android:background="@drawable/ic_more_1"
                        android:layout_height="35dp"
                        android:layout_marginEnd="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <Button
                android:id="@+id/btn_add_cart_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:background="#FD006B"
                android:text="add to cart"/>
        </androidx.cardview.widget.CardView>




    </LinearLayout>


</androidx.core.widget.NestedScrollView>

